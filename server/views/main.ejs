<link rel="stylesheet" type="text/css" crossorigin="anonymous" href="http://meta-kage.kakaocdn.net/dn/osa/blog/assets/fonts/Kakao.css"/> 
<html>
<head>
    <title>미세먼지 예측 사이트</title>

    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="common/jquery-3.3.1.min.js"></script>

    <script>
            function Move(loc){
                var offset = $("#"+loc).offset();
                $('html, body').animate({scrollTop : offset.top}, 400);
            }
    </script>

    <script type=" text/javascript ">  
        var date=new Date();

        function addZeros(num, digit) { // 자릿수 맞춰주기
            var zero = '';
            num = num.toString();
            if (num.length < digit) {
                for (i = 0; i < digit - num.length; i++) {
                zero += '0';
                }
            }
            return zero + num;
        }

        jQuery(function($){
            $( "#chatin").on( "click" , function() {
                var txt=$('#inputQue').val();
                $('inputQue').val('')
                $( "#from_me" ).append("<li><span id='nm'>나</span><span id='co'>"+txt+"</span><span id='tm'>"+date.getHours()+":"+addZeros(date.getMinutes(),2)+"</span></li><br>");
            });          
            $( "#test li" ).on( "click" , function() {     

                alert($(this).text());     
            });           
        });  
    </script>

    <style>
        #chat_frame{
            width: 380px;
            padding: 10px 50px 10px 10px;
            background-color:#a1c0d6;
        }
        #chat_frame > ul{
            position: relative;
            width: 350px;
            z-index: 0;
        }
        #chat_frame > ul > li > span {
            font-family:'Kakao';
        }

        ul#from_me {
            text-align: right;
        }
        ul#from_me > li {
            display: inline-block;
            text-align: left;
            position: relative;
            background: #FCCE00;
            word-wrap: break-word;
            max-width: 240px;
            padding:10px;
            margin-top: 10px;
            margin-bottom: 30px;
            border-radius: 10px;
        }
        ul#from_me > li:after {
            content: '';
            position: absolute;
            height: 25px;
            width: 25px;
            border-radius: 12.5px;
            z-index: -1;
            background: #a1c0d6;
            bottom: -10px;
            right: -13px;
        }
        ul#from_me > li:before {
            content: '';
            position: absolute;
            height: 25px;
            width: 25px;
            border-radius: 12.5px;
            z-index: -1;
            background: #FCCE00;
            bottom: -6px;
            right: -4px;
        }

        ul#from_me > li > span#nm {
            position: absolute;
            right:0px;
            top:-20px;
        }

        ul#from_me > li > span#tm {
            position: absolute;
            font-size: 14px;
            left:-55px;
            bottom:0px;
        }

        ul#from_you > li {
            display: inline-block;
            position: relative;
            
            background: #FFFFFD;
            
            word-wrap: break-word;
            max-width: 240px;
            padding:10px;
            margin-top: 10px;
            margin-bottom: 30px;
            border-radius: 10px;
        }
        ul#from_you > li:after {
            content: '';
            position: absolute;
            height: 25px;
            width: 25px;
            border-radius: 12.5px;
            z-index: -1;
            background: #a1c0d6;
            bottom: -10px;
            left: -13px;
        }
        ul#from_you > li:before {
            content: '';
            position: absolute;
            height: 25px;
            width: 25px;
            border-radius: 12.5px;
            z-index: -1;
            background: #FFFFFD;
            bottom: -6px;
            left: -4px;
        }
        ul#from_you {
            text-align: left;
        }

        ul#from_you > li > span#nm {
            position: absolute;
            left:0px;
            top:-20px;
        }

        ul#from_you > li > span#tm {
            position: absolute;
            font-size: 14px;
            right:-55px;
            bottom:0px;
        }
    </style>
</head>
<body>
    <a href="/main"><img src="public/images/log.png" width="100" height="100"></a><p>
    <button onclick="Move('map')" >오늘의 미세먼지</button>
    <button onclick="Move('prediction')" >연간 예측</button>
    <button onclick="Move('chat_frame')" >미세먼지 챗봇</button>
    
